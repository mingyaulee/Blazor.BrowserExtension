<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <InternalsVisibleTo Include="Blazor.BrowserExtension.Analyzer.Test" />
  </ItemGroup>

  <!-- Analyzer properties. -->
  <PropertyGroup>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>

    <!-- We will package this as part of Blazor.BrowserExtension.Build -->
    <IsPackable>false</IsPackable>
    <IsShippingPackage>false</IsShippingPackage>

    <!-- Do not warn about conflict in version, all the package references are private -->
    <NoWarn>MSB3277;$(NoWarn)</NoWarn>

    <!-- For debugging, view generated file in obj/ -->
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <IsRoslynComponent>true</IsRoslynComponent>
  </PropertyGroup>

  <ItemGroup>
    <AdditionalFiles Include="AnalyzerReleases.*.md" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" />
  </ItemGroup>

</Project>
