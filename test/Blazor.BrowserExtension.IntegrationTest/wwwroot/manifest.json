{
  "manifest_version": 2,
  "name": "Blazor.BrowserExtension Integration Test",
  "description": "A browser extension for integration test of Blazor.BrowserExtension",
  "version": "1.0",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "content/Blazor.BrowserExtension/ContentScript.js" ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'wasm-eval' 'sha256-v8v3RKRPmN4odZ1CWM5gw80QKPCCWMcpNeOmimNL2AA='; object-src 'self'",
  "web_accessible_resources": [
    "framework/*",
    "content/*"
  ],
  "permissions": [
    "*://*/*",
    "webRequest",
    "webRequestBlocking"
  ]
}